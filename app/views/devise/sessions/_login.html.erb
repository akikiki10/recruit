<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-inline' } ) do |f| %>
  <div class="form-group">
    <%= f.label 'id' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm', placeholder: "メールアドレス" %>
  </div>

  <div class="form-group">
    <%= f.label 'pass' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-sm', placeholder: "パスワード" %>
  </div>

  <!--
  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  -->

  <div>
    <%= f.submit "ログイン", class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

